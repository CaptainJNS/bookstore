%main.container
  #slider.carousel.slide{'data-ride': "carousel"}
    %ol.carousel-indicators
      %li.active{'data-target': "#slider", 'data-slide-to': "0"}
      %li{'data-target': "#slider", 'data-slide-to': "1"}
    .carousel-inner{role: "listbox"}
      - @latest_books.each_with_index do |book, index|
        .item{ class: ('active' if index.zero?) }
          .row
            .col-sm-5
              .general-img-wrap
                - if book.images.any?
                  = image_tag(book.images[0], class: 'img-shadow general-thumbnail-img')
                - else
                  = image_tag('no_cover.jpg', class: 'img-shadow general-thumbnail-img')
            .col-sm-7
              .mb-60
                %h1= book.title
                %p.lead= book.description
                %p.lead.small= book.authors.map{ |author| author.name }.join(', ')
                .general-align
                  - if book.quantity.positive?
                    %button.btn.btn-primary Buy Now
                  -else
                    %button.disabled.btn Buy Now
    %a.left.carousel-control{href: "#slider", role: "button", 'data-slide': "prev"}
      %span.icon-prev{'aria-hidden': "true"}
      %span.sr-only Previous
    %a.right.carousel-control{href: "#slider", role: "button", 'data-slide': "next"}
      %span.icon-next{'aria-hidden': "true"}
      %span.sr-only Next

.container
  .jumbotron.text-center.mb-0
    %h2.h1 Welcome to our amazing Bookstore!
    .mb-res-50
      %p We pore through hundreds of new books each month and select the five best we can find to share with our members.
    -# = link_to 'Get Started', books_path, class: 'button btn btn-default'
  .mb-35
    %h3 Best Sellers
    .row
      -@best_sellers.each do |book|
        .col-sm-6.col-md-3
          .general-thumb-wrap
            .thumbnail.general-thumbnail
              - if book.images.any?
                = image_tag(book.images[0], class: 'img-shadow general-thumbnail-img')
              - else
                = image_tag('no_cover.jpg', class: 'img-shadow general-thumbnail-img')
              .thumb-hover
                .general-thumb-link-wrap
                  %a.thumb-hover-link{href: book_path(book)}
                    %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                  %a.thumb-hover-link{href: "#"}
                    %i.fa.fa-shopping-cart.thumb-icon
          .mb-35
            .clearfix
              %p.pull-right.font-16.in-gold-500= 'â‚¬'+book.price.to_s
              %p.title.mr-55= book.title
            %span.divider-sm
            %p.lead.small= book.authors.map{ |author| author.name }.join(', ')
