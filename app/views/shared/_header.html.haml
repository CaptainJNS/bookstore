%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand= t('default.bookstore')
      - if user_signed_in?
        %a.shop-link.pull-right.visible-xs{href: "#"}
          %span.shop-icon
            %span.shop-quantity 4
        %a.shop-link.pull-right.hidden-xs{href: "#"}
          %span.shop-icon
            %span.shop-quantity 0
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .visible-xs
        = render partial: 'shared/mobile_menu'

      .hidden-xs
        = render partial: 'shared/menu'
