.col-md-5.mb-40
  .visible-xs.visible-sm
    %h3.general-subtitle.mt-0= t('settings.billing')
  = form_for(@billing, method: :post, remote: true, url: update_billing_path) do |f|
    .form-group
      = f.label :first_name, t('settings.first_name'), class: 'control-label input-label'
      = f.text_field(:first_name,
                      autofocus: true,
                      autocomplete: 'first_name',
                      class: 'form-control',
                      required: true,
                      placeholder: t('settings.first_name'))

    .form-group
      = f.label :last_name, t('settings.last_name'), class: 'control-label input-label'
      = f.text_field(:last_name,
                      autofocus: true,
                      autocomplete: 'last_name',
                      class: 'form-control',
                      required: true,
                      placeholder: t('settings.last_name'))

    .form-group
      = f.label :address, t('settings.address'), class: 'control-label input-label'
      = f.text_field(:address,
                      autofocus: true,
                      autocomplete: 'address',
                      class: 'form-control',
                      required: true,
                      placeholder: t('settings.address'))

    .form-group
      = f.label :city, t('settings.city'), class: 'control-label input-label'
      = f.text_field(:city,
                      autofocus: true,
                      autocomplete: 'city',
                      class: 'form-control',
                      required: true,
                      placeholder: t('settings.city'))

    .form-group
      = f.label :zip, t('settings.zip'), class: 'control-label input-label'
      = f.text_field(:zip,
                      autofocus: true,
                      autocomplete: 'zip',
                      class: 'form-control',
                      required: true,
                      type: "number",
                      placeholder: t('settings.zip'))

    .form-group
      = f.label :country, t('settings.country'), class: 'control-label input-label'
      = f.text_field(:country,
                      autofocus: true,
                      autocomplete: 'country',
                      class: 'form-control',
                      required: true,
                      placeholder: t('settings.country'))

    .form-group.mb-60
      = f.label :phone, t('settings.phone'), class: 'control-label input-label'
      = f.text_field(:phone,
                      autofocus: true,
                      autocomplete: 'phone',
                      class: 'form-control',
                      required: true,
                      pattern: '^[+]?[\d]{10,13}$',
                      placeholder: t('settings.phone'))

    .text-center.general-text-align
      = f.submit t('settings.save'), class: 'btn'
