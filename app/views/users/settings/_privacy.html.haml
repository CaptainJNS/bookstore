.col-sm-5
  %p.in-gold-500.font-18.mb-25= t('settings.email')
  = form_for(current_user, as: :email, method: :post, class: 'general-form-md', remote: true, url: update_email_path) do |f|
    .form-group.mb-35
      = f.label :email, t('auth.enter_email'), class: 'control-label input-label'
      -# %label.control-label.input-label{for: "email"}= t('auth.enter_email')
      = f.email_field(:email,
                      autofocus: true,
                      autocomplete: 'email',
                      id: 'email',
                      class: 'form-control',
                      required: true,
                      placeholder: t('auth.enter_email'))
      -# %input#email.form-control{name:"email", type: "email", placeholder: t('auth.enter_email')}
    .general-text-align
      = f.submit t('settings.save'), class: 'btn btn-default mb-35'
      -# %button.btn.btn-default.mb-35= t('settings.save')

.col-sm-5.col-sm-offset-1
  %p.in-gold-500.font-18.mb-25= t('auth.password')
  %form.general-form-md.divider-lg-bottom.pb-25
    .form-group.mb-30
      %label.control-label.input-label{for: "oldPassword"}= t('settings.old_password')
      %input#oldPassword.form-control{name:"password", type: "password", placeholder: t('settings.old_password')}
    .form-group.mb-30
      %label.control-label.input-label{for: "password"}= t('auth.type_new_password')
      %input#password.form-control{name:"password", type: "password", placeholder: t('auth.type_new_password')}
    .form-group.mb-40
      %label.control-label.input-label{for: "confirmPassword"}= t('auth.confirm_password')
      %input#confirmPassword.form-control{name:"password", type: "password", placeholder: t('auth.confirm_password')}
    .general-text-align
      %button.btn.disabled.mb-10= t('settings.save')
.col-sm-12
  %p.in-gold-500.font-18.mb-25= t('settings.remove')
  %form
    .general-settings-btn
      %button.btn.disabled.mb-20= t('settings.please_remove')
    .form-group.checkbox.general-settings-checkbox
      %label.checkbox-label
        %input.checkbox-input{type: "checkbox", hidden: "true"}
        %span.checkbox-icon
          %i.fa.fa-check
        %span.checkbox-text= t('settings.understand')
