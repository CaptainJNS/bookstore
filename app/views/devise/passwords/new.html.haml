= content_for(:title, 'Restore password' + ' | ')
= render 'devise/shared/error_messages'
%main.container.general-main-wrap.mt-100
  .text-center
    %h1.mb-30= 'Forgot your password?'
    %p.general-password-text= 'We\'ll email you instructions on how to reset it'

  .general-form
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = render 'devise/shared/error_messages', resource: resource

      .form-group.mb-25
        = f.email_field(:email,
                        autofocus: true,
                        autocomplete: 'email',
                        class: 'form-control',
                        required: true,
                        placeholder: 'Enter email')

      = f.submit 'Send instructions', class: 'btn btn-default mb-20 center-block'

      .text-center
        = link_to 'Cancel', new_user_session_path, class: 'in-gold-500 mb-2'
