= content_for(:title, 'Register' + ' | ')
%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Register
    %a.general-login-icon{href: "#"}
      %i.fa.fa-facebook-official

    %p.general-login-text or

  .general-form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .form-group.mb-30
        = f.label :user_email, 'Enter Esmail', class: 'control-label input-label'
        = f.email_field(:email,
                      autofocus: true,
                      autocomplete: 'email',
                      class: 'form-control',
                      required: true,
                      placeholder: 'Enter Email')

      .form-group.mb-30
        = f.label :user_password, 'Password', class: 'control-label input-label'
        = f.password_field(:password,
                        autocomplete: 'password',
                        class: 'form-control',
                        required: true,
                        placeholder: 'Password')

      .form-group.mb-30
        = f.label :user_password_confirmation, 'Confirm Password', class: 'control-label input-label'
        = f.password_field(:password_confirmation,
                        autocomplete: 'password_confirmation',
                        class: 'form-control',
                        required: true,
                        placeholder: 'Confirm Password')

      .text-center
        = f.submit 'Register', class: 'btn btn-default mb-20'

  %p.general-sign-text.text-center
    = link_to 'Have an account?', new_user_session_path, class: 'in-gold-500'
