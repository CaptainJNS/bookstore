%h3= t('book.write_review')
= simple_form_for ([@book, @book.reviews.build]), class: 'row' do |f|
  %p.general-info-text= t('book.score')
  .mb-15
    %i.fa.fa-star.rate-empty
    %i.fa.fa-star.rate-empty
    %i.fa.fa-star.rate-empty
    %i.fa.fa-star.rate-empty
    %i.fa.fa-star.rate-empty

  .mb-40
    = f.hidden_field :user_id, value: current_user.id
    = f.hidden_field :book_id, value: @book.id

    .form-group
      = f.label :body, t('book.review'), class: 'control-label input-label in-grey-600'
      = f.text_area(:body,
                  id: 'review',
                  class: 'form-control',
                  required: true)

    = f.submit t('book.post'), class: 'text-right btn mb-20', id: 'postReview'
